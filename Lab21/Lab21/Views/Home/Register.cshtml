@model Lab21.Models.AddUserViewModel

@{
    ViewBag.Title = "Registration";
}

<h1>Registration Page</h1>

@using (@Html.BeginForm("AddUser", "Home", FormMethod.Post))
{
    <div class="row">
        First Name: @Html.EditorFor(x => Model.FirstName)
    </div>
    <div class="row">
        Last Name:  @Html.EditorFor(y => Model.LastName)
    </div>
    <div class="row">
        Email:      @Html.EditorFor(z => Model.Email)
    </div>

    <input type="submit" value="AddUser"/>
    }

